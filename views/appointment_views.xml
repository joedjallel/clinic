<odoo>
    <!-- Vue Kanban -->
    <record id="clinic_appointment_kanban_view" model="ir.ui.view">
        <field name="name">clinic.appointment.kanban</field>
        <field name="model">clinic.appointment</field>
        <field name="arch" type="xml">
            <kanban default_group_by="etape_file" quick_create="false" class="o_kanban_small_column">
                <field name="name"/>
                <field name="patient_id"/>
                <field name="doctor_id"/>
                <field name="date_rdv"/>
                <field name="etat"/>
                <field name="priorite"/>
                <field name="etape_file"/>

                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top mb8">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <span>
                                                <field name="name"/>
                                            </span>
                                        </strong>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div class="row mb4">
                                        <div class="col-12">
                                            <i class="fa fa-user"/>
                                            <field name="patient_id"/>
                                        </div>
                                    </div>
                                    <div class="row mb4" t-if="record.doctor_id.value">
                                        <div class="col-12">
                                            <i class="fa fa-user-md"/>
                                            <field name="doctor_id"/>
                                        </div>
                                    </div>
                                    <div class="row mb4">
                                        <div class="col-12">
                                            <i class="fa fa-calendar"/>
                                            <field name="date_rdv"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <span t-if="record.priorite.raw_value == 'urgente'" class="badge badge-danger">
                                            <i class="fa fa-exclamation-triangle"/>
                                            Urgente
                                        </span>
                                        <span t-else="" class="badge badge-secondary">Normale</span>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <span t-att-class="'badge ' + (record.etat.raw_value == 'confirme' ? 'badge-success' :
                                                               record.etat.raw_value == 'en_cours' ? 'badge-warning' :
                                                               record.etat.raw_value == 'termine' ? 'badge-info' :
                                                               record.etat.raw_value == 'annule' ? 'badge-danger' :
                                                               'badge-secondary')">
                                            <field name="etat"/>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="appointment_form_view" model="ir.ui.view">
        <field name="name">clinic.appointment.form</field>
        <field name="model">clinic.appointment</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <!--                                <button name="action_confirmer" string="Confirmer" type="object"-->
                    <!--                                        class="btn-primary" invisible="etat != 'brouillon'"/>-->
                    <!--                                <button name="action_en_cours" string="Passer en Cours" type="object"-->
                    <!--                                        invisible="etat != 'confirme'"/>-->
                    <button name="action_create_encounter" string="Passer en Cours" type="object"
                            invisible="etat != 'en_cours'"/>
                    <field name="etat" widget="statusbar" statusbar_visible="brouillon,confirme,en_cours,termine"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="patient_id"/>
                            <field name="doctor_id"/>
                            <field name="date_rdv"/>
                        </group>
                        <group>
                            <field name="priorite"/>
                            <field name="etape_file"/>
                            <field name="room_id"/>
                        </group>
                        <field name="note" placeholder="Ajouter des observations..." nolabel="1"/>

                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vue Arbre -->
    <record id="appointment_tree_view" model="ir.ui.view">
        <field name="name">clinic.appointment.tree</field>
        <field name="model">clinic.appointment</field>
        <field name="arch" type="xml">
            <tree decoration-danger="priorite=='urgente'" decoration-success="etat=='confirme'"
                  decoration-muted="etat=='termine'">
                <field name="name"/>
                <field name="patient_id"/>
                <field name="doctor_id"/>
                <field name="date_rdv" widget="datetime"/>
                <field name="etat"/>
                <field name="priorite"/>
                <field name="etape_file"/>
            </tree>
        </field>
    </record>

