<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Prescription Form View -->
        <record id="view_clinic_prescription_form" model="ir.ui.view">
            <field name="name">clinic.prescription.form</field>
            <field name="model">clinic.prescription</field>
            <field name="arch" type="xml">
                <form string="Prescription">

                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                            <group>
                                <field name="encounter_id"/>
                                <field name="patient_id"/>
                                <field name="physician_id"/>
                            </group>

                        <notebook>
                            <page string="Médicaments">
                                 <field name="lines_ids" nolabel="1"
                                   context="{'default_encounter_id': active_id}">
                                <tree>
                                    <field name="product_id"/>
                                    <field name="dose"/>
                                    <field name="dose_unit"/>
                                    <field name="frequency"/>
                                    <field name="duration_days"/>
                                </tree>

                            </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Prescription Tree View -->
        <record id="view_clinic_prescription_tree" model="ir.ui.view">
            <field name="name">clinic.prescription.tree</field>
            <field name="model">clinic.prescription</field>
            <field name="arch" type="xml">
                <tree string="Prescriptions">
                    <field name="name"/>
                    <field name="patient_id"/>
                    <field name="physician_id"/>
                    <field name="datetime"/>
                </tree>
            </field>
        </record>

        <!-- Prescription Search View -->
        <record id="view_clinic_prescription_search" model="ir.ui.view">
            <field name="name">clinic.prescription.search</field>
            <field name="model">clinic.prescription</field>
            <field name="arch" type="xml">
                <search string="Rechercher des prescriptions">
                    <field name="name"/>
                    <field name="patient_id"/>
                    <field name="physician_id"/>
                    <group expand="0" string="Group By">
                        <filter string="Patient" name="patient" domain="[]" context="{'group_by': 'patient_id'}"/>
                        <filter string="Médecin" name="doctor" domain="[]" context="{'group_by': 'physician_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Prescription Action -->
        <record id="action_clinic_prescription" model="ir.actions.act_window">
            <field name="name">Prescriptions</field>
            <field name="res_model">clinic.prescription</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_clinic_prescription_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créer une nouvelle Ordonnance
                </p>
            </field>
        </record>


    </data>
</odoo>