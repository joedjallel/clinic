<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Prescription Form View -->
        <record id="view_clinic_prescription_form" model="ir.ui.view">
            <field name="name">clinic.prescription.form</field>
            <field name="model">clinic.prescription</field>
            <field name="arch" type="xml">
                <form string="Prescription">
                    <header>
                        <field name="state" widget="statusbar" options="{'clickable': '1'}"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="encounter_id"/>
                                <field name="patient_id"/>
                                <field name="doctor_id"/>
                            </group>
                            <group>
                                <field name="date"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Prescription">
                                <field name="description" placeholder="Détails de la prescription..."/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Prescription Tree View -->
        <record id="view_clinic_prescription_tree" model="ir.ui.view">
            <field name="name">clinic.prescription.tree</field>
            <field name="model">clinic.prescription</field>
            <field name="arch" type="xml">
                <tree string="Prescriptions">
                    <field name="name"/>
                    <field name="patient_id"/>
                    <field name="doctor_id"/>
                    <field name="date"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <!-- Prescription Search View -->
        <record id="view_clinic_prescription_search" model="ir.ui.view">
            <field name="name">clinic.prescription.search</field>
            <field name="model">clinic.prescription</field>
            <field name="arch" type="xml">
                <search string="Rechercher des prescriptions">
                    <field name="name"/>
                    <field name="patient_id"/>
                    <field name="doctor_id"/>
                    <filter string="Brouillon" name="draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Validée" name="validated" domain="[('state', '=', 'validated')]"/>
                    <filter string="Délivrée" name="delivered" domain="[('state', '=', 'delivered')]"/>
                    <group expand="0" string="Group By">
                        <filter string="Patient" name="patient" domain="[]" context="{'group_by': 'patient_id'}"/>
                        <filter string="Médecin" name="doctor" domain="[]" context="{'group_by': 'doctor_id'}"/>
                        <filter string="État" name="state" domain="[]" context="{'group_by': 'state'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Prescription Action -->
        <record id="action_clinic_prescription" model="ir.actions.act_window">
            <field name="name">Prescriptions</field>
            <field name="res_model">clinic.prescription</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_clinic_prescription_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créer une nouvelle prescription
                </p>
            </field>
        </record>

        <!-- Menu Item -->
        <menuitem id="menu_clinic_prescription"
                  name="Prescriptions"
                  parent="menu_clinic_root"
                  action="action_clinic_prescription"
                  sequence="50"/>
    </data>
</odoo>